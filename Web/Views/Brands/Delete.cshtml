@model BrandViewModel
@{
    ViewBag.Title = "Remove Brand?";
}
<div>
    <h2 class="h2">Remove Brand?</h2>
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <td colspan="2"></td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>Id</th>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>@Model.Title</td>
            </tr>
        </tbody>
        <tfoot> </tfoot>
    </table>
</div>
<form asp-controller="Brands" asp-action="Delete" method="post">
    <div>
        <input class="btn btn-danger" type="submit" value="Delete" />
        <a class="btn btn-primary" asp-action="Index">Cancel</a>
    </div>
</form>