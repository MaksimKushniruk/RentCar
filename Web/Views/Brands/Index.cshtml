@model IEnumerable<BrandViewModel>
@{
    ViewBag.Title = "Brands";
}

<a class="btn btn-success" asp-controller="Brands" asp-action="Create">Add New Brand</a>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td class="text-md-end">
                    <a class="btn btn-sm btn-primary" asp-controller="Brands" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-sm btn-primary" asp-controller="Brands" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-controller="Brands" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
    </tfoot>
</table>