@model CarViewModel
@{
    ViewBag.Title = "Remove Car";
}
<div>
    <h2 class="h2">Remove Car?</h2>
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <td colspan="2"></td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>Id</th>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <th>License Plate</th>
                <td>@Model.LicensePlate</td>
            </tr>
            <tr>
                <th>Model Name</th>
                <td>@Model.ModelName</td>
            </tr>
            <tr>
                <th>Brand Name</th>
                <td>@Model.Brand.Title</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>@Model.Color</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>@Model.Year</td>
            </tr>
            <tr>
                <th>Price Per Hour</th>
                <td>@Model.PricePerHour</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>@Model.Status</td>
            </tr>
        </tbody>
        <tfoot> </tfoot>
    </table>
</div>
<form asp-controller="Cars" asp-action="Delete" method="post">
    <div>
        <input class="btn btn-danger" type="submit" value="Delete" />
        <a class="btn btn-primary" asp-action="Index">Cancel</a>
    </div>
</form>