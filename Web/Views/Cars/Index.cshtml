@model IEnumerable<CarViewModel>
@{
    ViewBag.Title = "Cars";
}

<a asp-controller="Cars" asp-action="create">Add New Car</a>
<table>
    <tr>
        <th>Id</th>
        <th>License Plate</th>
        <th>Model Name</th>
        <th>Brand Name</th>
        <th>Color</th>
        <th>Year</th>
        <th>Price</th>
        <th>Status</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.LicensePlate</td>
            <td>@item.ModelName</td>
            <td>@item.Brand.Title</td>
            <td>@item.Color</td>
            <td>@item.Year</td>
            <td>@item.PricePerHour</td>
            <td>@item.Status</td>
            <td>
                <a asp-controller="Cars" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a asp-controller="Cars" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a asp-controller="Cars" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>