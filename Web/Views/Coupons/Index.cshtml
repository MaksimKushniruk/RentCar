@model IEnumerable<CouponViewModel>
@{
    ViewBag.Title = "Coupons";
}

<a asp-controller="Coupons" asp-action="Create">Add New Coupon</a>
<table>
    <tr>
        <th>Id</th>
        <th>Code</th>
        <th>Discount</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.CouponCode</td>
            <td>@item.Discount</td>
            <td>
                <a asp-controller="Coupons" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a asp-controller="Coupons" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a asp-controller="Coupons" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>