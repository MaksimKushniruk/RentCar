@model CustomerViewModel
@{
    ViewBag.Title = "Remove Customer";
}
<div>
    <h2 class="h2">Remove Customer?</h2>
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <td colspan="2"></td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>Id</th>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <th>First Name</th>
                <td>@Model.FirstName</td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>@Model.LastName</td>
            </tr>
            <tr>
                <th>City</th>
                <td>@Model.City</td>
            </tr>
            <tr>
                <th>Phone Number</th>
                <td>@Model.PhoneNumber</td>
            </tr>
        </tbody>
        <tfoot> </tfoot>
    </table>
</div>
<form asp-controller="Customers" asp-action="Delete" method="post">
    <div>
        <input class="btn btn-danger" type="submit" value="Delete" />
        <a class="btn btn-primary" asp-action="Index">Cancel</a>
    </div>
</form>