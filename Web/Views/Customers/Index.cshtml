@model IEnumerable<CustomerViewModel>
@{
    ViewBag.Title = "Customers";
}

<a asp-controller="Customers" asp-action="Create">Add New Customer</a>
<table>
    <tr>
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>City</th>
        <th>Phone Number</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.City</td>
            <td>@item.PhoneNumber</td>
            <td>
                <a asp-controller="Customers" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a asp-controller="Customers" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a asp-controller="Customers" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>