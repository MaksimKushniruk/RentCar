@model IEnumerable<ReservationViewModel>
@{
    ViewBag.Title = "Reservations";
}

<a class="btn btn-success" asp-controller="Reservations" asp-action="Create">New Reservation</a>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Customer</th>
            <th>Car</th>
            <th>Start Date</th>
            <th>Final Date</th>
            <th>Price</th>
            <th>Discount</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Customer.FirstName @item.Customer.LastName</td>
                <td>@item.Car.Brand.Title @item.Car.ModelName</td>
                <td>@item.StartDate</td>
                <td>@item.FinalDate</td>
                <td>@item.Price</td>
                <td>@item.Coupon.Discount</td>
                <td class="text-md-end">
                    <a class="btn btn-sm btn-primary" asp-controller="Reservations" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-sm btn-primary" asp-controller="Reservations" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-controller="Reservations" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>

    </tfoot>
</table>