@model IEnumerable<CarViewModel>
@{
    ViewBag.Title = "Cars";
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>License Plate</th>
            <th>Model Name</th>
            <th>Brand Name</th>
            <th>Color</th>
            <th>Year</th>
            <th>Price</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.LicensePlate</td>
                <td>@item.ModelName</td>
                <td>@item.Brand.Title</td>
                <td>@item.Color</td>
                <td>@item.Year</td>
                <td>@item.PricePerHour</td>
                <td>@item.Status</td>
                <td class="text-md-end">
                    <form asp-controller="Reservations" asp-action="SelectCar" asp-route-id="@item.Id" method="post">
                        <div>
                            <input class="btn btn-sm btn-success" type="submit" value="Select" />
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>

    </tfoot>
</table>