@model IEnumerable<CustomerViewModel>
@{
    ViewBag.Title = "Customers";
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>City</th>
            <th>Phone Number</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.City</td>
                <td>@item.PhoneNumber</td>
                <td class="text-md-end">
                    <form asp-controller="Reservations" asp-action="SelectCustomer" asp-route-id="@item.Id" method="post">
                        <div>
                            <input class="btn btn-sm btn-success" type="submit" value="Select" />
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>

    </tfoot>
</table>